<?xml version="1.0" encoding="utf-8"?>
<code.name.monkey.backend.views.WidthFitSquareLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/palette_color_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <View
            android:id="@+id/gradient_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"/>

        <com.stfalcon.multiimageview.MultiImageView
            android:id="@+id/multiple_images"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/material_component_lists_three_line_height"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:background="@drawable/color_gradient"/>

            <LinearLayout
                android:id="@+id/title_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/songs"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/md_white_1000"/>

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/md_white_1000"/>

            </LinearLayout>


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/songs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="bottom|end"
                android:visibility="gone"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_play_arrow_white_24dp"
                app:useCompatPadding="true"/>
        </RelativeLayout>

        <code.name.monkey.retromusic.views.IconImageView
            android:id="@+id/menu"
            android:layout_margin="0dp"
            style="@style/OverFlowButton"
            android:layout_gravity="end"/>
    </android.support.v7.widget.CardView>
</code.name.monkey.backend.views.WidthFitSquareLayout>